@page
@model MyNoteBook.Pages.Journals.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Journal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           <div class="form-group">
                <label asp-for="Journal.notebook.Name" class="control-label"></label>
                <select asp-for="Journal.notebook.Name" class="form-control" asp-items="ViewBag.NoteBooks"></select>
                <span asp-validation-for="Journal.notebook" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Journal.mood" class="control-label"></label>
                <select asp-for="Journal.mood.MoodPic" class="form-control" asp-items="ViewBag.Moods"></select>
                <span asp-validation-for="Journal.mood" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Journal.Date" class="control-label"></label>
                <input asp-for="Journal.Date" value="2022-01-13" class="form-control" />
                <span asp-validation-for="Journal.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Journal.weather" class="control-label"></label>
                <select asp-for="Journal.weather.WeatherPic" class="form-control" asp-items="ViewBag.Weathers"></select>
                <span asp-validation-for="Journal.weather" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Journal.BackgroundColor" class="control-label"></label>
                <input asp-for="Journal.BackgroundColor" class="form-control" />
                <span asp-validation-for="Journal.BackgroundColor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Journal.Title" class="control-label"></label>
                <input asp-for="Journal.Title" class="form-control" />
                <span asp-validation-for="Journal.Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Journal.Content" class="control-label"></label>
                <input asp-for="Journal.Content" class="form-control" />
                <span asp-validation-for="Journal.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
